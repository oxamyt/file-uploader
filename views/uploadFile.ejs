<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload File</title>
    <link href="/stylesheets/output.css" rel="stylesheet" />
    <link rel="icon" href="/Images/icon.svg" />
  </head>
  <body
    class="bg-gray-100 font-sans flex items-center justify-center min-h-screen"
  >
    <div class="container mx-auto p-4 max-w-xl">
      <h1 class="text-3xl font-bold text-center mb-6">Upload File</h1>

      <% if (errors && errors.length > 0) { %>
      <div
        class="bg-red-100 border border-red-400 text-red-700 p-4 rounded mb-4"
      >
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form
        action="/files/upload"
        method="post"
        enctype="multipart/form-data"
        class="bg-white shadow-md rounded p-6"
      >
        <div class="mb-4">
          <label for="file" class="block text-sm font-medium text-gray-700"
            >File:</label
          >
          <input
            type="file"
            id="file"
            name="file"
            required
            class="mt-1 block w-full border border-gray-300 rounded-md p-2"
          />
        </div>

        <div class="mb-4">
          <label for="folder" class="block text-sm font-medium text-gray-700"
            >Select Folder:</label
          >
          <select
            id="folder"
            name="folderId"
            required
            class="mt-1 block w-full border border-gray-300 rounded-md p-2"
          >
            <% folders.forEach(folder => { %>
            <option value="<%= folder.id %>"><%= folder.name %></option>
            <% }) %>
          </select>
        </div>

        <button
          type="submit"
          class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 transition w-full"
        >
          Submit
        </button>
      </form>
    </div>
  </body>
</html>
